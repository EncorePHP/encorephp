{
    "name": "encorephp/framework",
    "description": "The EncorePHP Framework.",
    "keywords": ["framework", "encorephp"],
    "license": "MIT",
    "require": {
        "php": ">=5.4.0",
        "encorephp/kernel": "dev-master",
        "encorephp/wxwidgets": "dev-master",
        "encorephp/controller": "dev-master",
        "encorephp/database": "dev-master",
        "encorephp/orm": "dev-master",
        "encorephp/migration": "dev-master"
    },
    "require-dev": {
        "encorephp/development": "dev-master"
    },
    "autoload": {
        "classmap": [
            "app/controllers",
            "app/models"
        ],
        "psr-4": {
            "": [
                "app/controllers",
                "app/models",
                "commands",
                "tests"
            ]
        }
    },
    "config": {
        "bin-dir": "bin"
    },
    "scripts": {
        "post-install-cmd": [
            "Encore\\Composer\\Script::postInstall"
        ],
        "post-update-cmd":[
            "Encore\\Composer\\Script::postUpdate"
        ]
    },
    "minimum-stability": "dev"
}
