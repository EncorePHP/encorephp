{
    "name": "encore/framework",
    "description": "The EncorePHP Framework.",
    "keywords": ["framework", "encorephp"],
    "require": {
        "php": ">=5.4.0",
        "encore/kernel": "dev-master",
        "encore/wxwidgets": "dev-master",
        "encore/view": "dev-master",
        "encore/database": "dev-master",
        "encore/orm": "dev-master",
        "encore/migration": "dev-master"
    },
    "require-dev": {
        "encore/development": "dev-master"
    },
    "autoload": {
        "classmap": [
            "app/commands",
            "app/controllers",
            "app/models"
        ]
    },
    "scripts": {
        "post-install-cmd": [
            "Encore\\Composer\\Script::postInstall"
        ],
        "post-update-cmd":[
            "Encore\\Composer\\Script::postUpdate"
        ]
    },
    "minimum-stability": "dev"
}
